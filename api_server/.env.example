# API server environment configuration
# Copy to .env and fill in deployment-specific values.

# Express application
PORT=3000
LOG_LEVEL=info

# PostgreSQL connection
# When developing against Cloud SQL, point DB_HOST to the Auth Proxy endpoint (e.g. 127.0.0.1) and
# fill in the Cloud SQL user credentials.
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=smoking_areas_db
DB_USER=api_user
DB_PASSWORD=
DB_CONNECTION_TIMEOUT_MS=10000
DB_IDLE_TIMEOUT_MS=30000

# CORS configuration
CORS_ORIGIN=http://localhost:8080

# External API keys (if server-side usage is added later)
# NAVER_MAP_CLIENT_ID=
