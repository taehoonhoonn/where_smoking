FROM ghcr.io/cirruslabs/flutter:stable AS builder

WORKDIR /workspace/app

ARG NAVER_MAP_KEY=""
ARG ADMIN_ACCESS_TOKEN=""
ARG API_BASE_URL=""

ENV NAVER_MAP_KEY=${NAVER_MAP_KEY}
ENV ADMIN_ACCESS_TOKEN=${ADMIN_ACCESS_TOKEN}
ENV API_BASE_URL=${API_BASE_URL}

# Cache dependencies
COPY pubspec.yaml pubspec.lock ./
RUN flutter pub get

# Copy source
COPY . ./

# Generate runtime configuration using build-time secrets or defaults.
RUN set -eu; \
    if [ -z "${NAVER_MAP_KEY}" ]; then \
      echo "[warn] NAVER_MAP_KEY build arg not provided; config.js will contain an empty key."; \
    fi; \
    if [ -z "${API_BASE_URL}" ]; then \
      API_BASE_URL_DEFAULT="http://localhost:3000/api/v1"; \
    else \
      API_BASE_URL_DEFAULT="${API_BASE_URL}"; \
    fi; \
    cat <<EOF > web/config.js
window.NAVER_MAP_KEY = "${NAVER_MAP_KEY}";
window.ADMIN_ACCESS_TOKEN = "${ADMIN_ACCESS_TOKEN}";
window.API_BASE_URL = "${API_BASE_URL_DEFAULT}";
EOF

# Build Flutter web bundle
RUN flutter build web --release

FROM nginx:1.27-alpine

RUN rm -rf /usr/share/nginx/html/*

COPY --from=builder /workspace/app/build/web /usr/share/nginx/html
COPY deploy/web/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
